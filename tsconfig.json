{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components/"],
      "@consts": ["src/consts/"],
      "@hocs": ["src/hocs/"],
      "@utils": ["src/utils/"],
      "@store": ["src/store/"],
      "@api": ["src/api/api"],
      "@models": ["src/models/"],
      "@routes": ["src/routes/"],
      "@types": ["src/types/"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
